<% @plots.each do |plot| %>
  <div id="plots-<%= plot.id %>">
    <p>#<%= plot.number %></p>
    <ul>
      <% plot.plants.each do |plant| %>
        <li><%= plant.name %> - <%= link_to "Remove #{plant.name}", plot_plant_path(plot.plot_plant_for(plant.id).id), method: :delete %></li>
      <% end %>
    </ul>
  </div>
<% end %>
